{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es2021",
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "sourceMap": true,
      "baseUrl": "/",
      "paths": {
         "@App/*": [
            "src/*"
         ],
         "lib/*": [
            "common/*"
         ]
      }
   }
}